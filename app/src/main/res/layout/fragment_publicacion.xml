<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".publicacion.PublicacionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <!--Titulo de la imagen-->
        <EditText
            android:id="@+id/pTitulo"
            android:padding="10dp"
            android:hint="Ponga un titulo"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--Imagen del post-->
        <ImageView
            android:id="@+id/pImagenIv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#707070"
            android:minHeight="270dp" />

        <!--Descripcion del post -->
        <EditText
            android:id="@+id/pDescripcionEt"
            android:padding="10dp"
            android:hint="Escriba la descripcion"
            android:inputType="textCapSentences|textMultiLine"
            android:minHeight="69dp"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--Boton para subir el post-->
        <Button
            android:id="@+id/pPublicarBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Publicar"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>